<Window x:Class="LuminaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Media Slideshow" 
        Background="Black" 
        WindowState="Maximized" 
        WindowStyle="None"
        Cursor="None"
        KeyDown="Window_KeyDown">
    <Grid Background="Black" 
        MouseMove="Grid_MouseMove" 
        MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        
        <Image x:Name="ImageViewer" Stretch="Uniform" Visibility="Collapsed"/>
        
        <MediaElement x:Name="VideoPlayer" 
                    Stretch="Uniform" 
                    LoadedBehavior="Manual" 
                    UnloadedBehavior="Stop"
                    IsMuted="True" 
                    MediaEnded="VideoPlayer_MediaEnded" 
                    Visibility="Collapsed"/>

        <ProgressBar x:Name="PlayProgressBar" 
                    VerticalAlignment="Bottom" 
                    HorizontalAlignment="Center"
                    Width="800" 
                    Height="10" 
                    Margin="0,0,0,60" 
                    Minimum="0" 
                    Maximum="100" 
                    Foreground="#FF0078D4" 
                    Background="#33FFFFFF" 
                    BorderThickness="0"
                    Visibility="Collapsed"
                    MouseLeftButtonDown="PlayProgressBar_MouseLeftButtonDown"/>
    </Grid>
</Window>